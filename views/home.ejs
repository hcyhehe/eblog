<!doctype html>
<html lang="zh-CN">
    <% include component/headcss.ejs %>

    <body class="user-select">
        <% include component/header.ejs %>

        <section class="container">
            <div class="content-wrap">
                <div class="content">
                    <div class="jumbotron">
                        <h1>欢迎访问JS全栈开发</h1>
                        <p>在这里可以看到前端技术，node.js等文章，还有我的程序人生！</p>
                    </div>

                    <article class="excerpt-minic excerpt-minic-index">
                        <h2><span class="red">【置顶】</span><a href="javascript:void(0)" title=""><%=anounce.title%></a></h2>
                        <p class="note">
                            <%=anounce.content%>
                        </p>
                    </article>

                    <div class="title">
                        <!-- <h3>最新发布</h3>
                        <div class="more">
                            <a href="">PHP</a>
                            <a href="">JavaScript</a>
                            <a href="">EmpireCMS</a>
                            <a href="">Apache</a>
                            <a href="">MySQL</a>
                        </div> -->
                    </div>

                    <% articles.forEach(function(item){ %>
                        <article class="excerpt excerpt-1">
                            <a class="focus" href="/article?id=<%=item.id%>" title="">
                                <img class="thumb" data-original="images/excerpt.jpg" src="images/excerpt.jpg" alt="">
                            </a>
                            <header>
                                <a class="cat" href="program">前端<i></i></a>
                                <h2><a href="/article?id=<%=item.id%>" title=""><%=item.title%></a></h2>
                            </header>
                            <p class="meta">
                                <time class="time"><i class="glyphicon glyphicon-time"></i> <%=item.create_time%></time>
                                <span class="views">
                                    <i class="glyphicon glyphicon-eye-open"></i> 共<%=item.watch_num%>人围观
                                </span> 
                                <a class="comment" href="/article?id=<%=item.id%>">
                                    <i class="glyphicon glyphicon-comment"></i> 0个不明物体
                                </a>
                            </p>
                            <p class="note">
                                <%=item.content%> </p>
                        </article>
                    <% }); %>

                </div>
            </div>

            <% include component/aside.ejs %>

        </section>

        <% include component/modal.ejs %>
        <% include component/footer.ejs %>
        <% include component/comjs.ejs %>
    </body>
</html>